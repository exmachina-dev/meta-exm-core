From 1fd5274c04dcdfb5ae332f06b9baadb4cfe34aec Mon Sep 17 00:00:00 2001
From: Benoit Rapidel <benoit.rapidel@exmachina.fr>
Date: Tue, 24 Nov 2015 19:19:02 +0100
Subject: [PATCH] gpio_keys: added armazcape switch pins

---
 arch/arm/boot/dts/am335x-bone-common.dtsi | 100 ++++++++++++++++++++++++++++++
 1 file changed, 100 insertions(+)

diff --git a/arch/arm/boot/dts/am335x-bone-common.dtsi b/arch/arm/boot/dts/am335x-bone-common.dtsi
index ae1e1ee..600d599 100644
--- a/arch/arm/boot/dts/am335x-bone-common.dtsi
+++ b/arch/arm/boot/dts/am335x-bone-common.dtsi
@@ -188,6 +188,28 @@
 			0x1c (PIN_INPUT_PULLUP | MUX_MODE1) /* gpmc_ad7.mmc1_dat7 */
 		>;
 	};
+        armazcape_sw_pins: pinmux_armazcape_sw_pins {
+                pinctrl-single,pins = <
+                        // GPIO Settings
+                        // 6            5               4           3                   2,1,0
+                        // Slew ctl     Receiver active Pullup/down Enable pullup/down  Mux mode
+                        // 0 Fast       0 Disable       0 Pulldown  0 Enabled           000 for mode 0
+                        // 1 Slow       1 Enable        1 Pullup    1 Disabled          111 for mode 7
+                        //
+                        // OUTPUT GPIO(mode 7)  0X07 pulldown, 0x17 pullup, 0x?f no pullup/down
+                        // INPUT GPIO(mode 7)   0X27 pulldown, 0x37 pullup, 0x?f no pullup/down
+
+                        0x090 (SLEWCTRL_SLOW | PIN_INPUT_PULLUP | MUX_MODE7)          // P8_7 = SWITCH_EXT0 = GPIO2_2
+                        0x094 (SLEWCTRL_SLOW | PIN_INPUT_PULLUP | MUX_MODE7)          // P8_8 = SWITCH_EXT1 = GPIO2_3
+                        0x09C (SLEWCTRL_SLOW | PIN_INPUT_PULLUP | MUX_MODE7)          // P8_9 = SWITCH_EXT2 = GPIO2_5
+                        0x098 (SLEWCTRL_SLOW | PIN_INPUT_PULLUP | MUX_MODE7)          // P8_10 = SWITCH_EXT3 = GPIO2_4
+                        0x07c (SLEWCTRL_SLOW | PIN_INPUT_PULLUP | MUX_MODE7)          // P8_26 = SWITCH_EXT4 = GPIO1_29
+                        0x040 (SLEWCTRL_SLOW | PIN_INPUT_PULLUP | MUX_MODE7)          // P9_15 = SWITCH_0 = GPIO1_16
+                        0x04C (SLEWCTRL_SLOW | PIN_INPUT_PULLUP | MUX_MODE7)          // P9_16 = SWITCH_1 = GPIO1_19
+                        0x044 (SLEWCTRL_SLOW | PIN_INPUT_PULLUP | MUX_MODE7)          // P9_23 = SWITCH_2 = GPIO1_17
+                        0x1AC (SLEWCTRL_SLOW | PIN_INPUT_PULLUP | MUX_MODE7)          // P9_25 = SWITCH_3 = GPIO1_21
+                 >;
+         };
 };
 
 &uart0 {
@@ -390,3 +412,81 @@
 &sham {
 	status = "okay";
 };
+
+/ {
+        #address-cells = <1>;
+        #size-cells = <1>;
+
+        gpio_keys {
+                compatible = "gpio-keys";
+                pinctrl-names = "default";
+                pinctrl-0 = <&armazcape_sw_pins>;
+                #address-cells = <1>;
+                #size-cells = <0>;
+
+                switch_ext0 {
+                        label = "switch_ext0";
+                        debounce_interval = <50>;
+                        linux,code = <112>;
+                        gpios = <&gpio2 2 0x5>;
+                        gpio-key,wakeup;
+                };
+                switch_ext1 {
+                        label = "switch_ext1";
+                        debounce_interval = <50>;
+                        linux,code = <113>;
+                        gpios = <&gpio2 3 0x5>;
+                        gpio-key,wakeup;
+                };
+                switch_ext2 {
+                        label = "switch_ext2";
+                        debounce_interval = <50>;
+                        linux,code = <114>;
+                        gpios = <&gpio2 5 0x5>;
+                        gpio-key,wakeup;
+                };
+                switch_ext3 {
+                        label = "switch_ext3";
+                        debounce_interval = <50>;
+                        linux,code = <115>;
+                        gpios = <&gpio2 4 0x5>;
+                        gpio-key,wakeup;
+                };
+                switch_ext4 {
+                        label = "switch_ext4";
+                        debounce_interval = <50>;
+                        linux,code = <116>;
+                        gpios = <&gpio1 29 0x5>;
+                        gpio-key,wakeup;
+                };
+
+                switch_0 {
+                        label = "switch_0";
+                        debounce_interval = <50>;
+                        linux,code = <90>;
+                        gpios = <&gpio3 21 0x5>;
+                        gpio-key,wakeup;
+                };
+                switch_1 {
+                        label = "switch_1";
+                        debounce_interval = <50>;
+                        linux,code = <91>;
+                        gpios = <&gpio1 17 0x5>;
+                        gpio-key,wakeup;
+                };
+                switch_2 {
+                        label = "switch_2";
+                        debounce_interval = <50>;
+                        linux,code = <92>;
+                        gpios = <&gpio1 16 0x5>;
+                        gpio-key,wakeup;
+                };
+                switch_3 {
+                        label = "switch_3";
+                        debounce_interval = <50>;
+                        linux,code = <93>;
+                        gpios = <&gpio1 19 0x5>;
+                        gpio-key,wakeup;
+                };
+        };
+};
